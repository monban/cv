<h3><%= reference.name %></h3>
<%= edit_reference(reference) %>
<%= delete_reference_link(reference) %>
<h4><%= reference.relationship %></h4>
<p>
<% if current_token %>
Phone: <span itemprop="telephone"><a href="tel:<%= reference.telephone %>">
        <%= reference.telephone %></a>
Email: <a href="mailto:<%= reference.email %>"><%= reference.email %></a>
<% else %>
    Contact information for references is available on request.
<% end %>
</p>
<p><%= reference.endorsement %></p>
